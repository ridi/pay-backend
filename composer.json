{
    "name": "ridi/pay-backend",
    "description": "RIDI Pay Backend API",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "Gyu Kang",
            "email": "kanggyu94@ridi.com"
        },
        {
            "name": "Jihyeok Seo",
            "email": "limeburst@ridi.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "ext-sodium": "*",
        "doctrine/dbal": "^2.8",
        "doctrine/orm": "^2.6",
        "firebase/php-jwt": "^5.0",
        "guzzlehttp/guzzle": "^6.3",
        "monolog/monolog": "^1.23",
        "predis/predis": "^1.1",
        "ramsey/uuid-doctrine": "^1.4",
        "ridibooks/crm": "^1.0",
        "ridibooks/oauth2": "^0.3.1",
        "sentry/sentry": "^1.9",
        "symfony/console": "^4.2",
        "symfony/flex": "^1.1",
        "symfony/framework-bundle": "~4.2.11",
        "symfony/validator": "^4.2",
        "symfony/yaml": "^4.2",
        "twig/twig": "^2.0",
        "zircote/swagger-php": "^3.0"
    },
    "require-dev": {
        "codeception/aspect-mock": "^3.0",
        "phpstan/phpstan": "^0.9",
        "phpstan/phpstan-doctrine": "^0.9",
        "phpunit/phpunit": "^7.3",
        "squizlabs/php_codesniffer": "^3.1.0",
        "symfony/browser-kit": "^4.2",
        "symfony/dotenv": "^4.2",
        "symfony/process": "^4.2"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "RidiPay\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RidiPay\\Tests\\": "tests/src"
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=config/phpcs/ruleset.xml",
        "phpstan": "phpstan analyse -l 6 -c config/phpstan/phpstan.neon src",
        "phpunit": "phpunit --colors=never --coverage-clover=coverage.xml",
        "test": [
            "@phpcs",
            "@phpstan",
            "@phpunit"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "~4.2.11"
        }
    }
}
