{
    "name": "ridi/pay",
    "description": "RIDI Pay Web Backend",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "Gyu Kang",
            "email": "me@amolorsy.me"
        },
        {
            "name": "Jihyeok Seo",
            "email": "limeburst@ridi.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://satis.ridi.io"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "ext-sodium": "*",
        "doctrine/dbal": "^2.8",
        "doctrine/orm": "^2.6",
        "firebase/php-jwt": "^5.0",
        "predis/predis": "^1.1",
        "ramsey/uuid-doctrine": "^1.4",
        "ridibooks/core": "^0.9.6",
        "ridibooks/crm": "^0.4.4",
        "ridibooks/oauth2": "^0.1.3",
        "sensio/framework-extra-bundle": "^5.2",
        "sentry/sentry": "^1.9.1",
        "symfony/console": "^4.1",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^4.1",
        "symfony/lts": "^4@dev",
        "symfony/validator": "^4.1",
        "symfony/yaml": "^4.1"
    },
    "require-dev": {
        "codeception/aspect-mock": "^3.0",
        "phpunit/phpunit": "^7.3",
        "squizlabs/php_codesniffer": "^3.1.0",
        "symfony/browser-kit": "^4.1",
        "symfony/dotenv": "^4.1"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "RidiPay\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RidiPay\\Tests\\": "tests/src"
        }
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false
        }
    }
}
